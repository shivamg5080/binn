{
    "version": 2,
    "builds": [
        {
            "src": "Backend/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "Frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/Backend/index.js"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/Frontend/dist/assets/$1"
        },
        {
            "source": "/(.*)\\.(.*)",
            "destination": "/Frontend/dist/$1.$2"
        },
        {
            "source": "/(.*)",
            "destination": "/Frontend/dist/index.html"
        }
    ]
}